# Monitoring and Error Tracking Environment Variables
#
# Copy this file to .env.local in each app (client-portal, admin-dashboard)
# and fill in the appropriate values for your production environment.

# =============================================================================
# Sentry Configuration
# =============================================================================

# Sentry DSN (Data Source Name)
# Get this from: https://sentry.io/settings/projects/[project]/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/your-project-id
SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/your-project-id

# Sentry Organization (for source map uploads)
SENTRY_ORG=your-organization-slug

# Sentry Project (for source map uploads)
SENTRY_PROJECT=client-portal  # or admin-dashboard

# Sentry Auth Token (for source map uploads)
# Generate at: https://sentry.io/settings/account/api/auth-tokens/
# Requires scopes: project:releases, org:read
SENTRY_AUTH_TOKEN=sntrys_your_auth_token_here

# Enable Sentry in development (default: false)
SENTRY_ENABLED=false

# Enable Sentry debug mode (shows detailed logging)
SENTRY_DEBUG=false

# =============================================================================
# Vercel Configuration
# =============================================================================

# Vercel Environment (automatically set by Vercel)
NEXT_PUBLIC_VERCEL_ENV=production  # development, preview, or production
NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app
NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=abc123

# Vercel Team ID (for API access)
VERCEL_TEAM_ID=team_your_team_id

# Vercel Project ID (automatically set by Vercel)
VERCEL_PROJECT_ID=prj_your_project_id

# =============================================================================
# Analytics Configuration
# =============================================================================

# Enable Vercel Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Enable Speed Insights
NEXT_PUBLIC_SPEED_INSIGHTS_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Enable pretty logging (formatted logs for development)
LOG_PRETTY=false

# Log to file
LOG_FILE_ENABLED=false
LOG_FILE_PATH=/var/log/invoice-app.log

# =============================================================================
# Alerting Configuration
# =============================================================================

# Slack Webhook URL for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Integration Key
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# Discord Webhook URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Email for alerts (if using custom email service)
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=ops@yourcompany.com

# =============================================================================
# Uptime Monitoring
# =============================================================================

# UptimeRobot API Key
UPTIME_ROBOT_API_KEY=your_uptime_robot_api_key

# Pingdom API Token
PINGDOM_API_TOKEN=your_pingdom_api_token

# Custom uptime monitoring webhook
UPTIME_WEBHOOK_URL=https://your-monitoring-service.com/webhook
UPTIME_WEBHOOK_TOKEN=your_webhook_auth_token

# API token for authenticated health checks
UPTIME_API_TOKEN=your_internal_api_token

# =============================================================================
# Performance Monitoring
# =============================================================================

# Enable performance monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Sample rate for performance monitoring (0.0 - 1.0)
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# Database Monitoring
# =============================================================================

# Enable database query logging
DATABASE_LOGGING=true

# Log slow queries (in milliseconds)
DATABASE_SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# Security Monitoring
# =============================================================================

# Enable security event logging
SECURITY_LOGGING=true

# Log failed login attempts
LOG_FAILED_LOGINS=true

# Maximum failed login attempts before alert
MAX_FAILED_LOGINS=10

# =============================================================================
# Feature Flags
# =============================================================================

# Enable error tracking
FEATURE_ERROR_TRACKING=true

# Enable performance monitoring
FEATURE_PERFORMANCE_MONITORING=true

# Enable session replay (Sentry)
FEATURE_SESSION_REPLAY=true

# =============================================================================
# Development/Testing
# =============================================================================

# Disable monitoring in test environment
DISABLE_MONITORING_IN_TESTS=true

# Send test alerts
SEND_TEST_ALERTS=false
