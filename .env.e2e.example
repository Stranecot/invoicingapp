# E2E Testing Environment Variables
# Copy this file to .env.e2e and fill in your test credentials

# Application URLs
BASE_URL=http://localhost:3001
CLIENT_PORTAL_URL=http://localhost:3001
ADMIN_DASHBOARD_URL=http://localhost:3002

# Test User Credentials
# These should be actual test accounts in your Clerk test environment
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=TestPassword123!

TEST_USER_EMAIL=user@test.com
TEST_USER_PASSWORD=TestPassword123!

TEST_ACCOUNTANT_EMAIL=accountant@test.com
TEST_ACCOUNTANT_PASSWORD=TestPassword123!

# Database (for test data seeding)
DATABASE_URL=postgresql://user:password@localhost:5432/invoice_app_test

# Clerk Configuration (Test Mode)
CLERK_SECRET_KEY=your_clerk_test_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_test_publishable_key

# CI/CD Settings
CI=false
HEADLESS=true

# Test Timeouts (in milliseconds)
TEST_TIMEOUT=60000
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# Screenshot and Video Settings
SCREENSHOTS_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# Parallel Execution
MAX_WORKERS=4
