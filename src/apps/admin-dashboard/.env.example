# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Clerk Webhook Secret (get from Clerk Dashboard > Webhooks)
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here

# Database
DATABASE_URL="file:./dev.db"

# Email Service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# From email address (must be verified in Resend)
# For development: use your own verified domain or use Resend's test domain
FROM_EMAIL=noreply@yourdomain.com

# Optional: From name (appears as sender name in email clients)
FROM_NAME=Invoice App Admin

# Optional: Reply-to email address
REPLY_TO_EMAIL=admin@yourdomain.com

# App URL (used for generating invitation acceptance links)
# Development: http://localhost:3002
# Production: https://admin.yourdomain.com
APP_URL=http://localhost:3002
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Development: Override recipient email for all outgoing emails
# Useful for testing without sending emails to real users
# Leave empty or remove in production
DEV_EMAIL_TO=developer@example.com

# Testing: Email address to send test emails to
TEST_EMAIL_TO=test@example.com
